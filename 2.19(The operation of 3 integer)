// 2.19(The operation of 3 integer).cpp : 此文件包含 "main" 函数。程序执行将在此处开始并结束。
//输入3个整数，求得他们的和，平均数，乘积，最大值和最小值

#include<iostream>
#include<string>
using namespace std;

int main()
{
    int a,b,c;
	int Sum, Average, Product, Largest, Smallest;

	cout << "Please Enter the FIRST integer: ";
	cin >> a;
	cout << "Please Enter the SECOND integer: ";
	cin >> b;
	cout << "Please Enter the THIRD integer: ";
	cin >> c;


	Sum = a + b + c;
	Average = (a + b + c) / 3;
	Product = a * b * c;

	Smallest = a;
	if (b < Smallest)
		Smallest = b;
	if (c < Smallest)
		Smallest = c;

	Largest = a;
	if (b > Largest)
		Largest = b;
    if (c > Largest)
		Largest = c;
	

	cout << "Sum is: " << Sum << endl
		<< "Average is: " << Average << endl
		<< "Product is: " << Product << endl
		<< "Largest is: " << Largest << endl
		<< "Smallest is: " << Smallest << endl;

}
